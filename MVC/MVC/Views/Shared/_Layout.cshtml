    <div id="preloader">
        <div class="inner">
            <div class="spinner-border text-warning" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-bs-toggle="popover"]').popover();
        });
    </script>

    <header class=" navbar-bg-colorEsc sticky-top py-1 mb-4 ">
        <div class="nav align-items-center ">
            <input type="checkbox" id="nav-check">
            <div class="nav-header ms-5 ">
                <div class="nav-title nav-title-display ">
                    <a href="/" class=" d-flex text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="35" fill="currentColor" color="white" class="bi bi-house" viewBox="0 0 16 16">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
                        </svg>
                    </a>
                </div>
            </div>
            <div class="nav-btn">
                <label for="nav-check">
                    <span></span>
                    <span></span>
                    <span></span>
                </label>
            </div>
            <div class="BarPesq">              
                <form class="d-flex BarPesqLen " role="search">
                    
                    <input list="list_item" autocomplete="off" id="input_list" name="input_list" type="search" class="form-control text-bg-dark semBordaDireita" onchange="" placeholder="Pesquisar..." aria-label="Pesquisar">
                    <datalist id="list_item">
                        <option value="foi">teste</option>
                        <option value="poi"></option>
                        <option value="poi"></option>
                    </datalist>
                    <button class="input-group-text semBordaEsquerda BarraDePesquisa" id="BarraDePesquisa"><img src="~/icones/search.svg" class="imgPesquisa" alt="" /></button>
                </form>
            </div>
            <div class="nav-links">
                @if (ViewBag.nomeUser == null)
                {
                    <a class="btn text-light borda-branca-azul" data-bs-toggle="modal" data-bs-target="#ModalEndereco">
                        <div class="text-overflow ">Endereço</div>
                    </a>
                }
                else if (ViewBag.RNCUC[0] == "Cadastre")
                {
                    @Html.ActionLink("Cadastrar endereço","AddEndereco","Conta",null, new {@class="btn text-light borda-branca-azul me-4"})
                }
                else if (ViewBag.RNCUC[0] == "Sem endereço")
                {
                    @Html.ActionLink("Cadastrar endereço","AddEndereco","Conta",null, new {@class="btn text-light borda-branca-azul me-4"})
                }
                else
                {
                    <div class="btn botaoEnderecoInicio letraP text-light position-relative borda-branca-azul me-3" id="BtnEndereco" style="height:50px" title="Endereço Padrão" data-bs-toggle="modal" data-bs-target="#ModalEndereco">
                        <div>
                            <span class="position-absolute spanBotaoEnd translate-middle text-opacity-75 text-light" style="white-space:nowrap;">
                                <span class="">Seu endereço padrão</span>
                            </span>
                            <div class="ajustaIcon">
                                <img src="~/icones/location.png" class="imagemLoc">
                                <div class="bot OcultaTexto">
                                    <span>@ViewBag.RNCUC[2]</span>
                                </div>
                                <div class="spanCep ">
                                    <span style="white-space:nowrap">@ViewBag.RNCUC[4]</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (ViewBag.nomeUser != null)
                {
                    <button class="btn dropdown-toggle drop-nome text-light borda-branca-azul" type="button" id="droplogin" data-bs-toggle="dropdown" aria_expanded="false"> @ViewBag.nomeUser</button>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="droplogin" id="ulDropDown">
                        <li>@Html.ActionLink("Sua conta","SuaConta","Conta",null, new {@class="dropdown-item"})</li>
                        <li>@Html.ActionLink("Seus Pedidos","SeusPedidos","Conta",null, new {@class="dropdown-item"})</li>
                        <li>@Html.ActionLink("Seu Carrinho","Carrinho","Produtos",null, new {@class="dropdown-item position-relative"})</li>
                        <li><hr class="dropdown-divider text-bg-light"></li>
                        <li><a class="dropdown-item link-light" href="/Home/Home/Sair">Sair</a></li>
                    </ul>
                }
                else
                {
                    @Html.ActionLink("Login","Login","Login",null, new {@class="btn borda-branca-azul"})
                    <span></span>
                    @Html.ActionLink("Criar conta","CriarConta","Login",null, new {@class="btn borda-branca-azul"})
                }
            </div>
        </div>

    </header>
    <main role="main" class="pb-3 conteudo">
        @RenderBody()
    </main>

    <footer class="text-white footer-bg-colorEsc mt-3 py-0 fixar-rodape">
        <div class="container py-2">
            <p class="float-end mb-1">
                <!-- <li class="ms-3"><a class="link-light social-svg" href="#"><svg role="img" class="bi" width="30" height="30" aria-label="Twitter"><title>Twitter</title><use xlink:href="#twitter"/></svg></a></li> -->
                <a class="link-light social-svg" href="https://github.com/renan403"><svg role="img" class="bi" width="30" height="30" aria-label="Github"><title>Github</title> <use xlink:href="#github" /></svg></a>
                <!-- <li class="ms-3"><a class="link-light social-svg" href="#"><svg role="img" class="bi" width="30" height="30" aria-label="Facebook"><title>Facebook</title><use xlink:href="#facebook"/></svg></a></li>-->
            </p>
            <p class="mb-1">Bem vindo ao meu projeto</p>
            <p class="mb-0">Desenvolvido por mim <a href="https://github.com/renan403">Renan</a> com intuito de aprimorar meus conhecimentos em C# principalmente.</p>
        </div>
    </footer>



    <script src="/docs/5.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/preLoader.js"></script>
    <script src="~/js/preencheCep.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src=”~/lib/jquery/dist/jquery.validate.min.js”></script>
    <script src=”~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js”></script>
</body>
</html>

<!-- POP-UP DO CEP -->

<div class="modal fade" id="ModalEndereco" tabindex="-1" aria-labelledby="ModalEndereco" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="ajusteModalCep">
                    <h5 class="modal-title" style="margin-left:60px" id="exampleModalLabel">Escolha sua localização</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="ajusteModalCep">
                    @if (ViewBag.nomeUser == null)
                    {
                        <p style="font-size:12px">As opções e velocidade de entrega podem variar de acordo com a região</p>
                        @Html.ActionLink("Faça login","Login","Login",null, new {@class="btn btn-outline-dark"})

                    }
                    else
                    {
                        <a class="text-decoration-none text-dark" asp-action="Endereco" asp-controller="Conta" title="Seu endereço padrão">
                            <div class="boxModalEnd">
                                <p>
                                    <strong>@ViewBag.RNCUC[5]</strong><br>
                                    @ViewBag.RNCUC[0],<strong> @ViewBag.RNCUC[1]</strong><br>
                                    @ViewBag.RNCUC[2], @ViewBag.RNCUC[3] <br>
                                    @ViewBag.RNCUC[4]
                                </p>
                                <h6 style="text-align:start;"><span class="text-opacity-50 text-dark" style="margin-left: 10px;">Endereço padrão</span></h6>
                            </div>
                        </a>
                        @Html.ActionLink("Gerenciar endereços","Endereco","Conta",null, new {@class="text-decoration-none"})
                    }
                </div>
            </div>
        </div>
    </div>
</div>
