    <div id="preloader">
        <div class="inner">
          <div class="spinner-border text-warning" role="status">
            <span class="sr-only"></span>
          </div>
        </div>
    </div>
   <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow border-bottom">

          <div class="navbar-brand col-md-3 col-lg-2 me-0 px-3">
               <a style="margin-left:30%;border-radius:100%; " title="Inicio" asp-area="" asp-controller="Home" asp-action="Home"><img style="border-radius:100%;" class="bordaTerra" src="https://images.vexels.com/media/users/3/152418/isolated/lists/098366e6994dd75ab46b47cd27b2c9d4-icone-do-planeta-terra.png" width = "70" /></a>
          </div>
          <button class="navbar-toggler d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

        

          <div >
              <span class="d-flex"  data-bs-container="body" data-bs-trigger="focus" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Não desenvolvido">
                 <input size="90" type="text" class="form-control form-control-dark semBordaDireita" placeholder="Pesquisar " aria-label="Search" aria-describedby="BarraDePesquisa"> 
                 <a href="#">
                     <span class="input-group-text semBordaEsquerda" id="BarraDePesquisa"  style="background:orange; border-color:orange;"><img src="~/icones/search.svg" style="width:22px;height:23px" alt="" /></span>
                 </a>
              </span>
          </div>
          <script type="text/javascript">
              $(document).ready(function(){
                  $('[data-bs-toggle="popover"]').popover();
              });
          </script>
          @if(ViewBag.nomeUser == null)
            {
                <a  class="nav-link bordaBottomLogin px-5 py-2 text-Laranja " style="width:150px" data-bs-toggle="modal" data-bs-target="#ModalEndereco">           
                     <div class="text-overflow">Endereço</div>
                </a>
            }
            else if(ViewBag.RNCUC[0] == "Cadastre") 
            {
               @Html.ActionLink("Cadastrar endereço","AddEndereco","Conta",null, new {@class="nav-link bordaBottomLogin px-3 py-2 text-Laranja",@style="width:150px"})
            }
            else if (ViewBag.RNCUC[0] == "Sem endereço")
            {
                 @Html.ActionLink("Cadastrar endereço","AddEndereco","Conta",null, new {@class="nav-link bordaBottomLogin px-3 py-2 text-Laranja",@style="width:150px"})
            }
            else
            {
                <a href="#" title="Endereço padrão">
                    <div class="navbar-nav">
                        <div class="nav-item text-nowrap">
                          <div class="nav-link bordaBottomLogin px-3 text-Laranja botaoEnderecoInicio d-flex letraP position-relative " data-bs-toggle="modal" data-bs-target="#ModalEndereco"> 
                              <div >
                                  <span class="position-absolute spanBotaoEnd translate-middle text-opacity-50 text-light" style="white-space: nowrap;">
                                    <span class="">Seu endereço padrão</span>                
                                  </span>                  
                                  <img src="~/icones/location.png" width="15px">
                                  <div class="bot text-overflow" >
                                     <span >@ViewBag.RNCUC[2]</span>
                                  </div>             
                                  <div class="spanCep " >
                                      <span style="white-space:nowrap">@ViewBag.RNCUC[4]</span>
                                  </div>
                              </div>
                           </div>
                       </div>
                   </div>
              </a>
            }     
          <div class="navbar-nav">
            <div class="nav-item text-nowrap">
               <div class="dropdown ">                       
                  @if(ViewBag.nomeUser != null)
                  {
                      @Html.ActionLink($"{@ViewBag.nomeUser}","SuaConta","Conta",null, new {@class="nav-link bordaBottomLogin dropdown-toggle px-5 text-Laranja",@style="margin-right:25px",@id="dropdownMenuButton2",@aria_expanded="false"})
                  }                           
                  else
                  {
                      @Html.ActionLink("Fazer Login","Login","Login",null, new {@class="nav-link bordaBottomLogin dropdown-toggle px-5 text-Laranja",@style="margin-right:25px",@id="dropdownMenuButton2",@aria_expanded="false"})
                  }                  
                  @if(ViewBag.nomeUser!= null)
                  {                                                 
                     <ul class="dropdown-menu dropdown-menu-dark" style="margin-left:7%" aria-labelledby="dropdownMenuButton2">
                       <li>@Html.ActionLink("Sua conta","SuaConta","Conta",null, new {@class="dropdown-item"})</li>
                       <li>@Html.ActionLink("Seus Pedidos","SeusPedidos","Conta",null, new {@class="dropdown-item"})</li>
                       <li>@Html.ActionLink("Seu Carrinho","Carrinho","Produtos",null, new {@class="dropdown-item position-relative"})</li>
                       <li><hr class="dropdown-divider text-bg-light"></li>
                       <li><a class="dropdown-item link-light" href="/Home/Home/Sair">Sair</a></li>
                     </ul>
                   }
                   else
                   {
                     <ul class="dropdown-menu dropdown-menu-dark" style="margin-left:7%" aria-labelledby="dropdownMenuButton2">
                       <li>@Html.ActionLink("Login","Login","Login",null, new {@class="dropdown-item"})</li>                                          
                       <li><hr class="dropdown-divider"></li>
                       <li>@Html.ActionLink("Criar conta","CriarConta","Login",null, new {@class="dropdown-item"})</li>                       
                     </ul>
                   }
               </div>
            </div>
          </div>
    </header>

    <div class="conteudo">
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>        
      <footer class="text-white mt-3 py-0 fixar-rodape">
          <div class="container py-2">
