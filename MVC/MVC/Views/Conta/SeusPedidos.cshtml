@{
    ViewBag.title = "Seus pedidos";

}


<!-- ENTREGUE -->

<div style="max-width:80%;margin:auto;border-radius:20px">
    <nav aria-label="breadcrumb " style="margin-left:0.5%">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-lightblue text-decoration-none" asp-action="SuaConta" asp-controller="Conta">Sua Conta</a></li>
            <li class="breadcrumb-item text-light active" aria-current="page">Pedidos</li>
        </ol>
    </nav>
</div>


<div class="card text-dark mb-3" style="max-width:80%;margin:auto; background-color: #171f25;">

    <div class="row">
        @if (ViewBag.NotasFiscais.Count == 0)
        {
            <h5 class="text-light mt-1" style="text-align:center">Não há produto no seu historico de compra</h5>
        }
        @foreach (var item in ViewBag.NotasFiscais)
        {
            <div class="mb-2">
                <div class="card-header card-header-product">
                    <div class="row">
                        <div class="col order-first">
                            <ul class="list-unstyled">
                                <li> Pedido realizado</li>
                                <li>@item.Value.Produto[0].Data</li>
                            </ul>

                        </div>
                        <div class="col">
                            <ul class="list-unstyled">
                                <li> Total</li>
                                <li>R$@item.Value.Produto[0].ValorTotalStr</li>
                            </ul>
                        </div>
                        <div class="col ">
                            <ul class="list-unstyled">
                                <li> Enviar para</li>
                                <li>
                                    <a class="text-decoration-none text-capitalize"
                                       data-bs-trigger="focus hover"
                                       data-bs-content="<ul class='list-unstyled text-capitalize'>
                                                                       <li ><strong>@item.Value.Endereco.Nome</strong></li>
                                                                       <li>@item.Value.Endereco.Endereco, @item.Value.Endereco.Numero</li>
                                                                       <li>@item.Value.Endereco.Cidade, @item.Value.Endereco.UF</li>
                                                                       <li>@item.Value.Endereco.Cep</li>
                                                                       <li>@item.Value.Endereco.Pais</li>
                                                                    </ul>"
                                                   data-bs-toggle="popover"
                                                   data-bs-html="true"
                                                   data-bs-placement="bottom"
                                                   data-bs-container="body">@item.Value.Endereco.Nome
                                                        </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col  order-last">
                            <ul class="list-unstyled">
                                <li>  Pedido: @item.Key</li>
                                <li>
                                    @Html.ActionLink("Exibir detalhes do pedido","DetalhePedido","Conta",new{nota = @item.Key},new{@class="text-decoration-none"}) |
                                    @Html.ActionLink("Exibir recibo","ExibirRecibo","Conta",new{nota = @item.Key},new{@class="text-decoration-none"})
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body card-body-product ">
                    @foreach (var i in item.Value.Produto)
                    {
                        @if (i.Recebido == true)
                        {

                            <div class="row" style="margin-top:2%">
                                @{
                                    //var data = DateTime.Now.ToString("dd MMMM yyyy");
                                    //var dia = int.Parse(@item.Value.Destinatario.Data.Substring(0, 2)) + 1;
                                    //if (dia > 31)
                                    //    dia = dia- 31 ;

                                }
                                <div class="col-sm-8">
                                    <div class="row">
                                        <div class="container text-center">
                                            <div class="row">
                                                <div class="col order-last" style="text-align:left">
                                                    <ul class="list-unstyled">
                                                        <li class="mb-1"><h5>@Html.ActionLink($"{@i.NomeProd}","Produtos","Produtos", new{id = $"{@i.IdProduto}"}, new {@class="text-decoration-none text-capitalize link-laranja-cinza" })</h5></li>
                                                        <li class="mb-1">R$<span> @i.PrecoProdStr</span></li>
                                                        <li class="mb-1">Quantidade:<span> @i.QtdPorProd</span></li>
                                                        <li class="mb-3">Vendido por:<a class="text-decoration-none link-laranja-cinza text-capitalize" href="#"> @i.NomeVendedor</a></li>
                                                        <li class="mb-1"><h6>Entregue: @item.Value.Destinatario.Data </h6></li>
                                                        <li class="mb-1">Assinado por: <span class="text-capitalize">@item.Value.Destinatario.Nome</span> </li>
                                                        <li class="mb-3">Elegível para devolução até: @item.Value.Destinatario.Devolucao </li>
                                                        <li class="mb-1"><a href="/Produtos/Produtos/@i.IdProduto" class="btn border-black-azul">Compra novamente</a></li>
                                                    </ul>
                                                </div>
                                                <div class="col order-first">
                                                    <a href="/Produtos/Produtos/@i.IdProduto"><img src="@i.UrlImg" width="300" height="150" style="border-radius:3px" alt="produto: @i.NomeProd" title="@i.NomeProd" /></a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-4 " style="text-align: center">
                                    <button class="btn btn-outline-dark w-50 mb-2" data-bs-toggle="modal" data-bs-target="#@i.IdProduto">Rastrear pacote </button>
                                    <a class="btn btn-outline-dark w-50  mb-2"
                                       data-bs-trigger="focus hover"
                                       data-bs-content="Não desenvolvido"
                                       data-bs-toggle="popover"
                                       data-bs-placement="right"
                                       data-bs-container="body">
                                        Devolver Produto
                                    </a>
                                    <button class="btn btn-outline-dark w-50">Avaliar produto </button>
                                    <a href="/Produtos/Produtos/@i.IdProduto" class="btn btn-outline-dark w-50">Compra novamente</a>
                                </div>
                            </div>
                            <div class="modal fade" id="@i.IdProduto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Seu pedido</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container text-end">
                                                <div class="row">

                                                    <div class="col order-last">
                                                        Entregue <br>@item.Value.Destinatario.Data
                                                    </div>
                                                    <div class="col">
                                                        Enviado
                                                    </div>
                                                    <div class="col ">
                                                        Em trânsito
                                                    </div>
                                                    <div class="col order-first">
                                                        <span id="teste">Pedido @i.Data</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="progress1">

                                                <div class="progress-bar progress-bar-animated" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;align-items:end"><span class="bola"></span></div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn " data-bs-dismiss="modal">Fechar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (i.Recebido == false)
                        {
                            <!-- ENVIANDO -->
                            <div class="row" style="margin-top:2%">
                                <div class="col-sm-8">
                                    <div class="row">
                                        <div class="container text-center">
                                            <div class="row">
                                                @{
                                                    var data = DateTime.Now.AddDays(1).ToString("dd MMMM yyyy");

                                                }
                                                <div class="col order-last" style="text-align:left">
                                                    <ul class="list-unstyled">
                                                        <li class="mb-1"><h5>@Html.ActionLink($"{@i.NomeProd}","Produtos","Produtos", new{id = $"{@i.IdProduto}"}, new {@class="text-decoration-none text-capitalize link-laranja-cinza" })</h5></li>                                                      
                                                        <li class="mb-1">R$<span> @i.PrecoProdStr</span></li>
                                                        <li class="mb-1">Quantidade:<span> @i.QtdPorProd</span></li>
                                                        <li class="mb-3">Vendido por:<a class="text-decoration-none link-laranja-cinza text-capitalize" href="#"> @i.NomeVendedor</a></li>
                                                        <li class="mb-3"><h6>Previsão de entrega: @data</h6></li>
                                                    </ul>
                                                </div>
                                                <div class="col order-first">
                                                    <a href="/Produtos/Produtos/@i.IdProduto"><img src="@i.UrlImg" width="300" height="150" style="border-radius:5px" alt="produto: @i.NomeProd" title="@i.NomeProd" /></a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-4 " style="text-align: center">
                                    <button class="btn btn-outline-dark w-50 mb-1" data-bs-toggle="modal" data-bs-target="#@i.IdProduto">Rastrear pacote </button>
                                    <a class="btn btn-outline-dark w-50  mb-1" data-bs-trigger="focus hover" data-bs-content="Não desenvolvido" data-bs-toggle="popover" data-bs-placement="right" data-bs-container="body">
                                        Devolver Produto
                                    </a>
                                    @{
                                        string id = "M" + @item.Key;
                                    }
                                    <button class="btn btn-outline-dark w-50 mb-1" data-bs-toggle="modal" data-bs-target="#@id">Recebeu pedido?</button>
                                    <a href="/Produtos/Produtos/@i.IdProduto" class="btn btn-outline-dark w-50">Compra novamente</a>
                                </div>
                            </div>
                            <div class="modal fade" id="@i.IdProduto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Seu pedido</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container text-end">
                                                <div class="row">
                                                    <div class="col order-last">
                                                        Previsão de entrega: @data
                                                    </div>
                                                    <div class="col">
                                                        Enviado
                                                    </div>
                                                    <div class="col ">
                                                        Em trânsito
                                                    </div>
                                                    <div class="col order-first">
                                                        <span id="teste">Pedido @i.Data</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-animated" role="progressbar" aria-label="Animated striped example" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 71%;align-items:end"><span class="bola"></span></div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn " data-bs-dismiss="modal">Fechar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="@id" tabindex="-1" aria-labelledby="Modal confirmar recebimento" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Confirmar recebimento</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        @using (Html.BeginForm("ConfirmarSeusPedidos", "Conta", FormMethod.Get))
                                        {
                                            <div class="modal-body">
                                                <p>
                                                    Confirmo que recebi os produtos.
                                                </p>
                                                <label for="basic-url" class="form-label"><strong>Nome</strong></label>
                                                <input type="text" name="nome" class="form-control" placeholder="Quem recebeu?" autocomplete="off" aria-label="Username" aria-describedby="basic-addon1">
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" name="pedido" value="@item.Key" class="btn btn-outline-dark">Confirmar</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p>erro</p>
                        }

                    }
                </div>
            </div>
        }
    </div>


</div>
<script>
    $(document).ready(function () {
        $('[data-bs-toggle="popover"]').popover();
    });

</script>
