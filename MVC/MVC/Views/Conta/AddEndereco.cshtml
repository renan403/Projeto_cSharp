@model ModelEndereco
@{
    ViewBag.Title = "Adicionar endereço";

    List<string> Paises = new List<string> { "Brasil", "Ainda não desenvolvido ..." };
}
@using (Html.BeginForm(FormMethod.Post, new { enctype = "application/x-www-form-urlencoded" }))
{

    <div class="container">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-lightblue text-decoration-none" asp-action="SuaConta" asp-controller="Conta">Sua Conta</a></li>
                <li class="breadcrumb-item"><a class="text-lightblue text-decoration-none" asp-action="Endereco" asp-controller="Conta">Endereço</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adicionar endereço</li>
            </ol>
        </nav>
    </div>
    <div class="container" style="background-color:white; border-radius:10px">
        <main>
            <div class="py-5 text-center">
                <h2>Adicionar endereço</h2>
            </div>

            <div class="row g-3">

                <div class="col-md-9 col-lg-12">
                    <form enctype="multipart/form-data" method="post">
                        <div class="row g-3">

                            <div class="col-12">
                                <div class="form-floating py-1">
                                    @Html.DropDownListFor(m => m.Pais,new SelectList(Paises) , "Escolha o pais", new {@class="form-select ", @id="pais",@required = "required" ,@oninvalid="setCustomValidity('Selecione um Pais/Região')",@oninput="setCustomValidity('')" })
                                    <label class="text" for="Pais">País/Região</label>
                                </div>
                            </div>

                            <div class="col-8">
                                <div class="form-floating py-1">

                                    @Html.TextBoxFor(m => m.Nome, "", new {@id="nome",@class="form-control form-control-sm letraP",@type="text", @Required ="Required", @placeholder="#",@title="Nome",@oninvalid="setCustomValidity('Campo vazio')",@oninput="setCustomValidity('')" })
                                    <label class="letraP" for="Nome">Nome</label>
                                </div>
                            </div>

                            <div class="col-4">
                                <div class="form-floating py-1">

                                    @Html.TextBoxFor(m => m.Telefone, "", new {@id="telefone",@class="form-control form-control-sm letraP",@type="text", @placeholder="#" ,@title="Telefone", @autocomplete="off", @onkeypress="Tipo(this,'TELEFONE')", maxlength="14" })
                                    <label class="letraP" for="Telefone">Telefone</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-floating py-1">
                                    @Html.TextBoxFor(m => m.Cep, "", new {@id="cep",@class="form-control form-control-sm letraP",@type="text",@Required ="Required", @placeholder="Exemplo. 12345-000" ,@title="Cep", @autocomplete="off",maxlength="9", @onkeypress="Tipo(this,'CEP')" })
                                    <label class="letraP" for="cep">Cep</label>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-floating py-1">
                                    @Html.TextBoxFor(m => m.Endereco, "", new {@id="logradouro",@class="form-control form-control-sm letraP",@type="text", @Required ="Required", @placeholder="Endereço, caixa postal, nome da empresa, A/C",@title="Logradouro",@oninvalid="setCustomValidity('Endereço inválido. Corrija e tente novamente.')",@oninput="setCustomValidity('')", @autocomplete="off"})
                                    <label class="letraP" for="logradouro">Endereço</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-floating py-1">
                                    @Html.TextBoxFor(m => m.Numero, "", new {@id="numero",@class="form-control form-control-sm letraP",@type="text", @placeholder="número ou s/n",@Required ="Required", @title="Número", @autocomplete="off"})
                                    <label class="letraP" for="numero">Numero</label>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <label for="exampleFormControlTextarea1" class="form-label">Complemento</label>
                                @Html.TextBoxFor(m => m.Complemento, "", new {@id="complemento", @class="form-control ", @TextMode="Text", @placeholder="Apartamento, sala, conjunto, edifício e etc.",@type="text",@oninvalid="setCustomValidity('Informações inválidas. Corrija e tente novamente.')",@oninput="setCustomValidity('')", @style="margin-top:0.5%",@autocomplete="off"})
                            </div>
                            <div class="col-md-6">
                                <label for="Bairro" class="form-label">Bairro</label>
                                @Html.TextBoxFor(m => m.Bairro, "", new {@id="bairro", @class="form-control ", @TextMode="Text", @placeholder="Insira o CEP acima para preencher o Bairro",@type="text", @Required ="Required",@autocomplete="off", @readonly="true"  })
                            </div>
                            <div class="col-md-6">
                            
                                    <label class="letraP form-label" for="cidade">Cidade</label>
                                    @Html.TextBoxFor(m => m.Cidade, "", new {@id="cidade", @class="form-control letraP", @placeholder="Insira o CEP acima para preencher a Cidade", @TextMode="Text",@type="text", @Required ="Required",@autocomplete="off" , @readonly="true" })
                            </div>
                            <div class="col-md-11">
                                <label for="Estado" class="form-label">Estado</label>
                                @Html.TextBoxFor(m => m.Estado, "", new {@id="estado", @class="form-control ", @TextMode="Text", @placeholder="Insira o CEP acima para preencher o Estado",@type="text", @Required ="Required",@autocomplete="off", @readonly="true"  })
                            </div>
                            <div class="col-md-1">
                                <label for="UF" class="form-label">UF</label>
                                @Html.TextBoxFor(m => m.UF, "", new {@class="form-control  ",@id="uf", @readonly="true" })
                            </div>
                        </div>
                        <div id="invalido">
                        </div>
                        <div id="ValidaEnvio" class=" d-grid mt-2 gap-2 col-6 mx-auto">
                            <button class="w-100 btn btn-success btn-sm mb-3 mt-3" type="submit">Salvar</button>

                        </div>
                    </form>
                </div>
            </div>
        </main>

    </div>
}